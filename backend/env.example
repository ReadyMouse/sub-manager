# Database
DATABASE_URL="postgresql://user:password@localhost:5432/stablerent?schema=public"

# Server
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# Email Service (for email verification, password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@stablerent.app
FROM_NAME=StableRent

# Envio Webhook
ENVIO_WEBHOOK_SECRET=your-envio-webhook-secret

# Blockchain - Sepolia Configuration (for automation)
DEFAULT_CHAIN_ID=11155111
CONTRACT_ADDRESS_SEPOLIA=0xd91844e669a6138dc41fe1aEb0091822CC12f4d1
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
PROCESSOR_PRIVATE_KEY=your-processor-wallet-private-key-64-chars

# Processor Fee Configuration
PROCESSOR_FEE_PERCENT=0.05
PROCESSOR_FEE_ADDRESS=0x17A4bAf74aC19ab1254fc24D7DcED2ad7639451b
PROCESSOR_FEE_CURRENCY=PYUSD
PROCESSOR_FEE_ID=1

# Hardhat/Development (from main .env)
ALCHEMY_API_KEY=your-alchemy-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

